<Window x:Class="PointGrey_Cam_Acq.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointGrey_Cam_Acq"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Grid.ColumnSpan="1" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Image x:Name="ImgMain" Grid.Row="0" Margin="10,10,10,10"/>
            <Button x:Name="BtnAcquire" Grid.Row="1" Width="100" Margin="0,10,10,10" 
                HorizontalAlignment="Right" Click="BtnAcquire_Click" Content="Acquire"/>
        </Grid>
        <TextBox x:Name="TxtLog" Grid.Column="1" Margin="10,10,10,10"/>
    </Grid>
</Window>
